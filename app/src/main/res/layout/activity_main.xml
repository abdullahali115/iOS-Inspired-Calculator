<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/imenu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/extraSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/previewText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="end|bottom"
        android:paddingHorizontal="17dp"
        android:text=""
        android:textColor="@color/lightGrey"
        android:textSize="28sp"
        />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:gravity="end|top"
        android:paddingHorizontal="13dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="55sp" />


    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="0.70"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sciLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/openBracket"
                    style="@style/sciButton"
                    android:text="(" />

                <Button
                    android:id="@+id/closeBracket"
                    style="@style/sciButton"
                    android:text=")" />

                <Button
                    style="@style/sciButton"
                    android:text="mc" />

                <Button
                    style="@style/sciButton"
                    android:text="m+" />

                <Button
                    style="@style/sciButton"
                    android:text="m-" />

                <Button
                    style="@style/sciButton"
                    android:text="mr" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    style="@style/sciButton"
                    android:text="2ⁿᵈ" />

                <Button
                    style="@style/sciButton"
                    android:text="x²" />

                <Button
                    style="@style/sciButton"
                    android:text="x³" />

                <Button
                    style="@style/sciButton"
                    android:text="xʸ" />

                <Button
                    style="@style/sciButton"
                    android:text="𝑒ˣ" />

                <Button
                    style="@style/sciButton"
                    android:text="10ˣ" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    style="@style/sciButton"
                    android:text="¹/ₓ" />

                <Button
                    style="@style/sciButton"
                    android:text="²√x" />

                <Button
                    style="@style/sciButton"
                    android:text="³√x" />

                <Button
                    style="@style/sciButton"
                    android:text="ʸ√x" />

                <Button
                    style="@style/sciButton"
                    android:text="ln" />

                <Button
                    style="@style/sciButton"
                    android:text="log₁₀" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    style="@style/sciButton"
                    android:text="x!" />

                <Button
                    style="@style/sciButton"
                    android:text="sin" />

                <Button
                    style="@style/sciButton"
                    android:text="cos" />

                <Button
                    style="@style/sciButton"
                    android:text="tan" />

                <Button
                    style="@style/sciButton"
                    android:text="𝑒" />

                <Button
                    style="@style/sciButton"
                    android:text="EE" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    style="@style/sciButton"
                    android:text="Rand" />

                <Button
                    style="@style/sciButton"
                    android:text="sinh" />

                <Button
                    style="@style/sciButton"
                    android:text="cosh" />

                <Button
                    style="@style/sciButton"
                    android:text="tanh" />

                <Button
                    style="@style/sciButton"
                    android:text="π" />

                <Button
                    style="@style/sciButton"
                    android:text="Rad" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/normalLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clear"
                    style="@style/otherButtonVer"
                    android:text="AC" />

                <Button
                    android:id="@+id/signSwitcher"
                    style="@style/otherButtonVer"
                    android:text="+/-" />

                <Button
                    style="@style/otherButtonVer"
                    android:text="%" />

                <Button
                    style="@style/operatorButtonVer"
                    android:text="÷" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    style="@style/numButtonVer"
                    android:text="7" />

                <Button
                    style="@style/numButtonVer"
                    android:text="8" />

                <Button
                    style="@style/numButtonVer"
                    android:text="9" />

                <Button
                    style="@style/operatorButtonVer"
                    android:text="×" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    style="@style/numButtonVer"
                    android:text="4" />

                <Button
                    style="@style/numButtonVer"
                    android:text="5" />

                <Button
                    style="@style/numButtonVer"
                    android:text="6" />

                <Button
                    style="@style/operatorButtonVer"
                    android:text="-" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    style="@style/numButtonVer"
                    android:text="1" />

                <Button
                    style="@style/numButtonVer"
                    android:text="2" />

                <Button
                    style="@style/numButtonVer"
                    android:text="3" />

                <Button
                    style="@style/operatorButtonVer"
                    android:text="+" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/menuButton"
                    style="@style/numButtonVer"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="@color/darkGrey"
                    android:src="@drawable/calculator_solid_full"
                    app:tint="@color/white" />

                <ImageButton
                    android:id="@+id/menuButton2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/menuButton3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <Button
                    style="@style/numButtonVer"
                    android:text="0" />

                <Button
                    style="@style/numButtonVer"
                    android:text="." />

                <Button
                    style="@style/operatorButtonVer"
                    android:text="=" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>